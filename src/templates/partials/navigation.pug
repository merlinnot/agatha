mixin navigation(pageName)
  amp-sidebar(id="sidebar" layout="nodisplay" side="right")
    nav(toolbar="(min-width: 45rem)" toolbar-target="toolbar-navigation")
      ul
        each page in navigationItems
          li
            a(
              href=page.href class=pageName === page.id ? "active" : ""
            ) #{page.name}

  div(id="toolbar")
